<h1>ログイン</h1>

<p class="flash"><%= flash[:alert] %></p>

<%= form_tag login_path do %>
  <table id="login_form">
    <tr>
      <td><%= label_tag :user_id, "ユーザーID" %></td>
      <td><%= text_field_tag :user_id, params[:user_id] %></td>
    </tr>
    <tr>
      <td><%= label_tag :pass, "パスワード" %></td>
      <td><%= password_field_tag :pass, params[:pass] %></td>
    </tr>

    <tr>
      <%= submit_tag "ログイン" %>
    </tr>
  </table>
<% end %>
