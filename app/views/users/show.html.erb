<p id="notice"><%= notice %></p>

<div id="user-detail">
  <h2>User Detail</h2>
  <p>
    <strong>User name:</strong>
    <%= @user.user_name %>
  </p>

  <p>
    <strong>User:</strong>
    <%= @user.user_id %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>
</div>

<div id="user-tasks">
  <h2>User Tasks(<%= @tasks.count %>)</h2>
  <% @tasks.each do |task| %>
    <p>
      <strong><%= link_to task.title, task %></strong>
      <%= task.due_day %>
    </p>
  <% end %>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
